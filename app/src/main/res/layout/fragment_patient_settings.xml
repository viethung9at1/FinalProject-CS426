<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="70dp"
    android:background="#c3fef4"
    tools:context=".fragmentPatient.PatientSettingsFragment">

    <!-- TODO: Update blank fragment layout -->




    <TextView
        android:id="@+id/textView_patient_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:text="Settings"
        android:textColor="#fa7c00"
        android:textSize="28sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_patient_setting_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="90dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/textview_patient_settings_username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:padding="5dp"
            android:text="jame123"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_patient_settings_change_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        >

        <TextView
            android:id="@+id/textView_patient_settings_change_username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:padding="5dp"
            android:text="Change Username"
            android:textSize="18sp"
            android:textColor="@color/black"/>
    </androidx.cardview.widget.CardView>




    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_patient_settings_change_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="190dp"
        >

        <TextView
            android:id="@+id/textview_patient_settings_change_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:padding="5dp"
            android:text="Change Password"
            android:textSize="18sp"
            android:textColor="@color/black"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_patient_settings_about_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="240dp"
        >

        <TextView
            android:id="@+id/textview_patient_settings_about_us"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:padding="5dp"
            android:text="About Us"
            android:textSize="18sp"
            android:textColor="@color/black" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_patient_settings_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="290dp"
        >

        <TextView
            android:id="@+id/textview_patient_settings_review"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:padding="5dp"
            android:text="Review"
            android:textSize="18sp"
            android:textColor="@color/black" />
    </androidx.cardview.widget.CardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/button_patient_settings_logout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="350dp"
        android:layout_marginEnd="28dp"

        app:cardBackgroundColor="#ff9452"
        app:cardCornerRadius="5dp"
        app:cardElevation="15dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true">

        <TextView
            android:id="@+id/textView_patient_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Log out"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18sp" />
    </com.google.android.material.card.MaterialCardView>

</FrameLayout>