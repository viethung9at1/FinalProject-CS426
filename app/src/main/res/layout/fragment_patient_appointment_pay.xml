<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/patientAppointmentPayContainer"
    android:background="#ffeac7"
    tools:context=".fragmentAppointment.PatientAppointmentPayFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_payment_appointment_fee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="32dp"
            android:text="Appointment Fee"
            android:textColor="#FF0000"
            android:textSize="28sp"
            android:textStyle="bold" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardViewAppointmentPay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="28dp"
            android:background="#f9e5c0"
            app:cardCornerRadius="12dp"
            app:cardElevation="15dp"
            app:cardBackgroundColor="#d2e6b2"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="26dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="26dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textAppointmentFee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Appointment fee:"
                        android:textColor="@color/black"
                        android:textSize="23sp"

                        />

                    <TextView
                        android:id="@+id/numAppointmentFee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="$10"
                        android:textColor="@color/black"
                        android:textSize="23sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="26dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="26dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textTransactionFee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Transaction fee:"
                        android:textColor="@color/black"
                        android:textSize="23sp"

                        />

                    <TextView
                        android:id="@+id/numTransactionFee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="$2"
                        android:textColor="@color/black"
                        android:textSize="23sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="26dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="26dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textTotalFee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total:"
                        android:textColor="#FF0000"
                        android:textSize="27sp"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:id="@+id/numTotalFee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="$12"
                        android:textColor="#FF0000"
                        android:textSize="27sp"
                        android:textStyle="bold" />
                </RelativeLayout>

            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/textView_payment_method"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="20dp"
            android:text="Payment Method"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            >
            <ToggleButton
                android:id="@+id/choosePay1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/choose_payment_1"
                android:paddingStart="12dp"
                android:paddingTop="12dp"
                android:paddingEnd="12dp"
                android:paddingBottom="12dp"
                android:textColor="@color/black"
                android:textOff=""
                android:textOn=""
                android:textSize="15sp"

                />

            <ToggleButton
                android:id="@+id/choosePay2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/choose_payment_5"
                android:paddingStart="12dp"
                android:paddingTop="12dp"
                android:paddingEnd="12dp"
                android:paddingBottom="12dp"
                android:textColor="@color/black"
                android:textOff=""
                android:textOn=""
                android:textSize="15sp"
                />

            <ToggleButton
                android:id="@+id/choosePay3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/choose_payment_4"
                android:paddingStart="12dp"
                android:paddingTop="12dp"
                android:paddingEnd="12dp"
                android:paddingBottom="12dp"
                android:textColor="@color/black"
                android:textOff=""
                android:textOn=""
                android:textSize="15sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ToggleButton
                android:id="@+id/choosePay4"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/choose_payment_2"
                android:paddingStart="12dp"
                android:paddingTop="12dp"
                android:paddingEnd="12dp"
                android:paddingBottom="12dp"
                android:textColor="@color/black"
                android:textOff=""
                android:textOn=""
                android:textSize="15sp"
                />

            <ToggleButton
                android:id="@+id/choosePay5"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/choose_payment_3"
                android:paddingStart="12dp"
                android:paddingTop="12dp"
                android:paddingEnd="12dp"
                android:paddingBottom="12dp"
                android:textColor="@color/black"
                android:textOff=""
                android:textOn=""
                android:textSize="15sp"
                />


        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/buttonPay"
            android:layout_width="271dp"
            android:layout_height="72dp"
            android:layout_gravity="center"
            android:layout_marginTop="90dp"
            android:paddingStart="18dp"
            app:cardBackgroundColor="#16b948"
            app:cardCornerRadius="12dp"
            app:cardElevation="15dp"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                android:text="CONFIRM PAY"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

</RelativeLayout>